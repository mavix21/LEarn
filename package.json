{
  "name": "skill-based",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F web...",
    "db:push": "turbo -F @skill-based/db push",
    "db:studio": "turbo -F @skill-based/db studio",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "test:web": "turbo run test --continue --filter=web...",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "@skill-based/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.3",
    "prettier": "catalog:",
    "turbo": "^2.5.3",
    "typescript": "catalog:",
    "@types/node": "catalog:"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "engines": {
    "node": ">=20"
  },
  "prettier": "@skill-based/prettier-config"
}
